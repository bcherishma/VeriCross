{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Backend Dependencies",
            "type": "shell",
            "command": "cd",
            "args": [
                "backend",
                "&&",
                "pip",
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Download SpaCy Models",
            "type": "shell",
            "command": "cd",
            "args": [
                "backend",
                "&&",
                "python",
                "-m",
                "spacy",
                "download",
                "en_core_web_sm",
                "&&",
                "python",
                "-m",
                "spacy",
                "download",
                "xx_ent_wiki_sm"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Backend Server",
            "type": "shell",
            "command": "cd",
            "args": [
                "backend",
                "&&",
                "uvicorn",
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Run Frontend Server",
            "type": "shell",
            "command": "cd",
            "args": [
                "frontend",
                "&&",
                "python",
                "-m",
                "http.server",
                "8080"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "cd",
            "args": [
                "backend",
                "&&",
                "python",
                "-m",
                "pytest",
                "tests/",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Docker Images",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Docker Compose",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "up",
                "-d"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Stop Docker Compose",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "down"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}